@model Product

<form method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label for="product_name" class="form-label">Name</label>
        <input id="product_name" name="name" class="form-control" value="@Model.Name" />
    </div>
    <div class="mb-3">
        <label for="product_price" class="form-label">Price</label>
        <input id="product_price" name="price" class="form-control" type="number" value="@Model.Price" />
    </div>

    <hr />

    <a href="/products" class="btn btn-outline-primary">Back to list</a>
    <button type="submit" class="btn btn-success">Save</button>
</form>
